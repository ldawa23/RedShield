# Database COnfiguration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/redshield_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=redshield_db
DB_USER=root
DB_PASSWORD=kali

# FastAPI COnfiguration
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=TRUE
SECRET_KEY=your-secret-key-here-change-in-production

#Redis (for Celery task queue)
REDIS-URL=redis://localhost:6379/0

# Security Settings
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
SAFE_MODE=True #Prevent dangerous exploits

# Ansible config
ANSIBLE_PLAYBOOKS_DIR=/app/ansible-playbooks
ANSIBLE_INVENTORY_DIR=/app/configs/inventory

# Scanning Tools
NMAP_PATH=/usr/bin/nmap
NUCLEI_PATH=/usr/local/bin/nuclei
NUCLEI_TEMPLATES=/root/nuclei-templates

# Report Settings
REPORTS_OUTPUT_DIR=/app/reports/generated
DEFAULT_REPORT_FORMAT=pdf

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/redshield.log
